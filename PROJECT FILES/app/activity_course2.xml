<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_2"
            android:textColor="#fe80"
            android:fontFamily="cursive"
            android:text="@string/course2"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course2"
            android:layout_centerHorizontal="true"
            android:text="@string/topic2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subheading2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/topic2"
            android:text="@string/subheading2_1"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading2_1"
            android:text="@string/text2_1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/subheading2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/text2_1"
            android:text="@string/subheading2_2"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading2_2"
            android:text="@string/text2_2"
            android:textSize="25sp" />
    </RelativeLayout>
</ScrollView>