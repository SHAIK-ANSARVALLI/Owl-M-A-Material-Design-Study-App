<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/course1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_1"
            android:textColor="#fe80"
            android:fontFamily="cursive"
            android:text="@string/course1"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/topic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course1"
            android:layout_centerHorizontal="true"
            android:text="@string/topic1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subheading1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/topic1"
            android:text="@string/subheading1_1"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading1_1"
            android:text="@string/text1_1"
            android:textSize="25sp"
            tools:ignore="VisualLintLongText" />

        <TextView
            android:id="@+id/subheading1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/text1_1"
            android:text="@string/subheading1_2"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading1_2"
            android:text="@string/text1_2"
            android:textSize="25sp"
            tools:ignore="VisualLintLongText" />
    </RelativeLayout>
</ScrollView>