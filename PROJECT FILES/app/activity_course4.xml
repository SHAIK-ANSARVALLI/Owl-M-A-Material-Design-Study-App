<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course4">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_4"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/course4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_4"
            android:textColor="#fe80"
            android:fontFamily="cursive"
            android:text="@string/course4"
            android:textAlignment="center"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/topic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course4"
            android:layout_centerHorizontal="true"
            android:text="@string/topic4"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subheading4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic4"
            android:text="@string/subheading4_1"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading4_1"
            android:text="@string/text4_1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/subheading4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4_1"
            android:text="@string/subheading4_2"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading4_2"
            android:text="@string/text4_2"
            android:textSize="25sp" />
    </RelativeLayout>
</ScrollView>