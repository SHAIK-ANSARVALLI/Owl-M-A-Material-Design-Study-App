<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_2" />

        <TextView
            android:id="@+id/course2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img2"
            android:fontFamily="cursive"
            android:text="@string/course2"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/topic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/topic2"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subheading2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topic2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/subheading2_1"
            android:textAlignment="gravity"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subheading2_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/text2_1"
            android:textSize="20sp"
            tools:ignore="VisualLintLongText" />


        <TextView
            android:id="@+id/subheading2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/subheading2_2"
            android:textAlignment="gravity"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subheading2_2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/text2_2"
            android:textSize="20sp"
            tools:ignore="VisualLintLongText" />
    </RelativeLayout>
</ScrollView>